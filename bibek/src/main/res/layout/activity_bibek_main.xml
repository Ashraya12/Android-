<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BibekMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.andriodexamples.addition.BibekMainActivity">

        <EditText
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="16dp"
            android:hint="Enter number 1 plz:"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="16dp"
            android:hint="Enter number 2 plz:"
            android:inputType="number"
            />
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="result"

            android:gravity="center"
            android:textSize="26sp"
            android:textStyle="italic"
            android:padding="16dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add"
                android:text="Add"
                android:textSize="21sp"
                android:onClick="Calc"
                android:textStyle="bold"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub"
                android:text="SUb"
                android:textSize="21sp"
                android:onClick="Calc"
                android:textStyle="bold"

                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mul"
                android:text="Mul"
                android:textSize="21sp"
                android:layout_marginLeft="60dp"
                android:onClick="Calc"
                android:textStyle="bold"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/div"
                android:text="DIvide"
                android:textSize="21sp"
                android:onClick="Calc"
                android:textStyle="bold"

                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click below for next program"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textStyle="italic"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/gonxt"
            android:layout_width="140dp"
            android:layout_height="73dp"
            android:text="NextPage"
            tools:layout_editor_absoluteX="130dp"
            tools:layout_editor_absoluteY="397dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>